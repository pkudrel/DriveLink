{
  "name": "drivelink-obsidian-plugin",
  "version": "0.1.34",
  "description": "Manual synchronization between your Obsidian Vault and Google Drive folder",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "build:local": "node scripts/build.js --prod",
    "build:dev": "node scripts/build.js",
    "version": "node scripts/build.js --skip-build",
    "release": "node scripts/release.js",
    "release:skip-build": "node scripts/release.js --skip-build",
    "release:clean": "node scripts/release.js --clean",
    "simple-token": "node scripts/simple-token.js",
    "token-setup": "node scripts/simple-token.js",
    "token-verify": "node scripts/simple-token.js --verify",
    "token-guide": "node scripts/simple-token.js --guide",
    "token-status": "node scripts/simple-token.js --status",
    "token-reset": "node scripts/simple-token.js --reset",
    "prebuild": "npm run version",
    "prepack": "npm run build:local"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "google-drive",
    "sync",
    "backup"
  ],
  "author": "DriveLink Plugin",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "archiver": "^5.3.1",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  }
}